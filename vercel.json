{
  "version": 2,
  "buildCommand": "echo 'No build needed for Deno'",
  "outputDirectory": ".",

  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/deno@1.0.0"
    }
  },

  "routes": [
    {
      "src": "/docs/assets/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}